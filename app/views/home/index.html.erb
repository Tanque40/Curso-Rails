<% if flash[:mensaje] %>
<script type="text/javascript">
    var mensaje = "<%= flash[:mensaje] %>"
    Materialize.toast(mensaje, 4000, 'rounded') // 4000 is the duration of the toast
</script>
<% end %>
<div class="row">
    <div class="col s12">
        <div class="card center">
            <h3>
                <%= @titulo %>
            </h3>
        </div>
    </div>
</div>
<%= button_to "Enviar", {:controller => "home", :action => "servicios"}, :class => "btn blue lighten-3 black-text" %><br>
<%= button_to "Valor", {:controller => "home", :action => "servicios"}, :valor => 20, :class => "btn blue lighten-3 black-text" %>
<div class="row">
    <div class="col s12 m6">
        <div class="card center">
            <h3>Formulario básico</h3>
        </div>
    </div>
</div>
<%= form_tag "/home/servicios", multipart: true do%>
    <div class="row">
        <div class="input-field col s12 l4">
            <%= label_tag "Nombre"%>
            <%= text_field_tag "Nombre"%><br>
        </div>
    </div>
    <div class="row">
        <div class="range-field col s12 m6">
            <%= range_field_tag :rango, 5, :min => 0, :max => 10 %>
        </div>
    </div>
    <p>
        <%= radio_button_tag :edad, "mayor", :checked => true, :class => "with-gap" %>
        <%= label_tag :edad_mayor, "Mayor" %>
    </p>
    <p>
        <%= radio_button_tag :edad, "menor"%>
        <%= label_tag :edad_menor, "Menor"%>
    </p>
    <p>
        <%= check_box_tag :fumador, "si"%>
        <%= label_tag :fumador%>
    </p>
    <%= file_field_tag :archivo %><br><br>
    <%= submit_tag "Enviar", :class => "btn blue lighten-3 black-text"%>
<% end %>
<div class="row">
    <div class="col s12">
        <div class="card center">
            <h3>Formulario de búsqueda por método get</h3>
        </div>
    </div>
</div>
<%= form_tag "/home/servicios", :method => "get" do%>
    <div class="row">
        <div class="input-field col s12 m6 l3">
            <%= label_tag "Nombre"%>
            <%= text_field_tag "Nombre"%>
        </div>
    </div>
    <%= submit_tag "Buscar", :class => "btn blue lighten-3 black-text"%>
<% end %>
<div class="row">
    <div class="col s12 m6 l6">
        <div class="card center">
            <div class="card-content">
                <span class="card-title"><h4>Listado de elementos</h4></span>
                <p>
                    <%for i in(0...@elementos.size) %>
                        <%= @elementos[i] %><br>
                    <% end %>
                </p>
            </div>
        </div>
    </div>
</div>
