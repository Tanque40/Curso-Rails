<div class="row">
    <div class="col s12 m6 l4">
        <div class="card center">
            <h3>Contacto</h3>
        </div>
    </div>
</div>
<% if flash[:mensaje] %>
    <script type="text/javascript">
        window.alert(flash[:mensaje])
    </script>
<% end %>
<div class="container">
    <%= form_tag "/home/contacto" do%>
        <div class="card-panel">
            <div class="row">
                <div class="input-field col s12 m6 l6 offset-l3">
                    <%= entrada_de_texto "nombre"%>
                </div>
                <div class="input-field col s12 m6 l6 offset-l3">
                    <%= entrada_de_texto "apellidos" %>
                </div>
                <div class="input-field col s12 m6 l6 offset-l3">
                    <%= label_tag "edad", "Inserte su edad" %>
                    <%= number_field_tag "#{@help.downcase}", nil, in: 1..99 %>
                </div>
                <div class="input-field col s12 m6 l6 offset-l3">
                    <%= entrada_de_texto "telefono" %>
                </div>
                <div class="col s12 m6 l6 offset-l3">
                    <%= radio_buton 3, "estado_civil", ["soltero","casado","separado"]%>
                </div>
                <div class="input-field col s12 m6 l6 offset-l3">
                    <%= label_tag "email", "Inserte su email" %>
                    <%= email_field_tag "email" %>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6 l6 offset-l3">
                    <center>
                        <%= submit_tag "Confirmar", :class => "btn" %>
                    </center>
                </div>
            </div>
        </div>
    <% end %>
</div>
<%= @titulo %><br>
<br>
